        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "none",
        "bracketSpacing": true,
        "arrowParens": "always",
        "endOfLine": "lf",
        "htmlWhitespaceSensitivity": "strict",
